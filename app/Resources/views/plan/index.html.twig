{% extends 'layout.html.twig' %}

{% block body %}
    <h1 style="color:#7f8c8d;">Plans list</h1>
    <a class="btn btn-primary" href="{{ path('plan_new') }}">Create a new plan</a>
    <table class="table">
        <thead>
            <tr>
                <th>Titre</th>
                <th>Description</th>
                <th>Datepublication</th>
                <th>Rate</th>
                <th>Enabled</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for plan in plans %}
            <tr>
                <td>{{ plan.titre }}</td>
                <td>{{ plan.description }}</td>
                <td>{% if plan.datePublication %}{{ plan.datePublication|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ plan.rate }}</td>
                <td>{% if plan.enabled %}Yes{% else %}No{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('plan_show', { 'id': plan.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('plan_edit', { 'id': plan.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
